---
const isIndex = Astro.url.pathname === '/';
---

<section class="absolute top-0 left-0 right-0 bg-transparent z-50 p-4 flex justify-between font-medium font-playfair">
  <div>
    {!isIndex && <h1 class='text-gold-300 font-playfair text-xl md:text-3xl'>CCAT Group Ltd.</h1>}
  </div>
  <div class="text-right">
    <a href="/" class="hover:bg-gold-300 hover:text-dark transition-all duration-300 mr-2">Home</a>
    <a href="/about/" class="hover:bg-gold-300 hover:text-dark transition-all duration-300">About Us</a>
  </div>
</section>