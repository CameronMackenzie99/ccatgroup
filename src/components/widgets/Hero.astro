---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';
import { getPermalink } from '~/utils/permalinks';
---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					Over 45 years of aviation safety management oversight experience in flight operations
					<span></span>
					<span class="sm:whitespace-nowrap"></span>
				</h1>
				<div class="max-w-3xl mx-auto">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						<span
							class="font-semibold underline decoration-dotted decoration-1 decoration-primary-600 underline-offset-2"
							>CCAT Group</span
						> is an Aviation Consultants and Advisory, with experience as both as a <em>Regulator</em> and <em
							>Operator</em
						> at senior level.
						<span class="inline sm:hidden">...</span><span class="hidden sm:inline"
							>We are based in the UK and travel globally working with clients both on site and remotely.</span
						>
					</p>
					<div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						<div class="flex w-full sm:w-auto">
							<a
								class="btn btn-primary sm:mb-0 w-full"
								href={getPermalink('contact', 'page')}
								target="_blank"
								rel="noopener"
							>
								<Icon name="tabler:mail" class="w-5 h-5 mr-1 -ml-1.5" /> Contact Us
							</a>
						</div>
						<div class="flex w-full sm:w-auto">
							<a class="btn w-full" href="#solutions">Learn more</a>
						</div>
					</div>
				</div>
			</div>
			<div>
				<div class="relative m-auto max-w-4xl">
					<Picture
						src={import('~/assets/images/hero_plane.jpg')}
						class="mx-auto rounded-md w-full"
						widths={[400, 768, 1480]}
						sizes="(max-width: 767px) 400px, (max-width: 1479px) 768px, 1480px"
						alt="Hero Image"
						aspectRatio={1480 / 833}
						loading="eager"
						width={1480}
						height={833}
					/>
				</div>
			</div>
		</div>
	</div>
</section>
