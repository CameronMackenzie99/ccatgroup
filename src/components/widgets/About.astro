---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';
import { getPermalink } from '~/utils/permalinks';
---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					CCAT group is headed up by
					<span></span>
					<span class="sm:whitespace-nowrap">Tony Mackenzie</span>
				</h1>
				<div class="max-w-3xl mx-auto">
					<div class="sm:flex gap-8 mb-8">
						<p class="text-xl text-gray-600 mb-8 dark:text-slate-400 my-auto">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsum dicta est distinctio nisi porro!
							Necessitatibus atque, sequi, magnam ea alias magni error commodi laboriosam voluptatibus a non repellendus
							odio! Quia?
						</p>
						<div class="relative m-auto max-w-xs">
							<Picture
								src={import('~/assets/images/profilepic.jpg')}
								class="mx-auto rounded-full w-full"
								widths={[100, 300, 500]}
								sizes="(max-width: 500px) 100vw, 800px"
								alt="Portrait"
								aspectRatio={1 / 1}
								loading="eager"
								width={20}
								height={20}
							/>
						</div>
					</div>
					<div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						<div class="flex w-full sm:w-auto">
							<a
								class="btn btn-primary sm:mb-0 w-full"
								href={getPermalink('contact', 'page')}
								target="_blank"
								rel="noopener"
							>
								<Icon name="tabler:mail" class="w-5 h-5 mr-1 -ml-1.5" /> Contact Us
							</a>
						</div>
					</div>
				</div>
			</div>
			<div></div>
		</div>
	</div>
</section>
