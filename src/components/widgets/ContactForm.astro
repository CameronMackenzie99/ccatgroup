---
import { Icon } from 'astro-icon';
---

<section class="relative">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<h1 class="text-xl text-gray-600 mb-8 dark:text-slate-400 my-auto">
				Please leave us a message below, and we will contact you to discuss
			</h1>
			<form name="contact" method="POST" data-netlify="true" class="sm:max-w-sm">
				<div class="flex flex-col gap-4">
					<div>
						<label for="name" class="block text-sm font-medium leading-6">Name</label>
						<input
							type="text"
							name="name"
							id="name"
							class="block w-full rounded-md border-0 py-1.5 pl-4 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
							placeholder="John Appleseed"
						/>
					</div>
					<div>
						<label for="email" class="block text-sm font-medium leading-6">Email</label>
						<input
							type="email"
							name="email"
							id="email"
							class="block w-full rounded-md border-0 py-1.5 pl-4 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
							placeholder="john@appleseed.com"
						/>
					</div>
					<div>
						<label for="message" class="block text-sm font-medium leading-6">Message</label>
						<textarea
							name="message"
							id="message"
							class="block w-full rounded-md border-0 py-1.5 pl-4 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
							placeholder=""></textarea>
					</div>
				</div>
				<p class="flex justify-center mt-8">
					<button type="submit" class="btn btn-primary sm:mb-0 w-1/3">
						<Icon name="tabler:mail" class="w-5 h-5 mr-1 -ml-1.5" />
						Send
					</button>
				</p>
			</form>
		</div>
	</div>
</section>
