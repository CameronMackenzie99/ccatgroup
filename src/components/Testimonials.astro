---

<section id='testimonials' class='py-24 bg-dark-800'>
  <div class='container mx-auto px-4'>
    <div class='text-center mb-16 animate-fade-in'>
      <h2 class='text-4xl font-playfair text-gold-300 mb-4'>Testimonials</h2>
      <div class='w-20 h-1 bg-gold-300 mx-auto'></div>
    </div>
    <div class='grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto'>
      {
        testimonials.map((testimonial, index) => (
          <div
            class='bg-dark-900 rounded-2xl shadow-sm shadow-gold-300 p-8 animate-slide-up'
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class='flex items-center mb-6'>
              <div>
                <h3 class='text-xl font-semibold text-gold-300'>
                  {testimonial.name}
                </h3>
              </div>
            </div>
            <svg
              class='w-10 h-10 text-primary-500/20 mb-4'
              fill='currentColor'
              viewBox='0 0 32 32'
            >
              <path d='M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z' />
            </svg>
            <p class='text-gray-300 text-lg leading-relaxed'>
              "{testimonial.text}"
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
