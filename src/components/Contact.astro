<section id="contact" class="relative py-24 bg-dark-900">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center animate-fade-in">
      <h2 class="text-4xl font-playfair text-gold-300 mb-6">Connect With Us</h2>
      <p class="text-gray-400 text-lg mb-12">
        Let's discuss how we can transform your organization's future.
      </p>
      <form class="space-y-6 animate-slide-up">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <input 
              type="text" 
              placeholder="Your Name" 
              class="w-full px-6 py-4 bg-dark-800 border-2 border-dark-700 text-white placeholder-gray-500 focus:border-gold-300 focus:ring-2 focus:ring-gold-300/50 rounded-none"
              required
            />
          </div>
          <div>
            <input 
              type="email" 
              placeholder="Your Email" 
              class="w-full px-6 py-4 bg-dark-800 border-2 border-dark-700 text-white placeholder-gray-500 focus:border-gold-300 focus:ring-2 focus:ring-gold-300/50 rounded-none"
              required
            />
          </div>
        </div>
        <div>
          <textarea 
            placeholder="Your Message" 
            class="w-full px-6 py-4 bg-dark-800 border-2 border-dark-700 text-white placeholder-gray-500 focus:border-gold-300 focus:ring-2 focus:ring-gold-300/50 h-40 rounded-none"
            required
          ></textarea>
        </div>
        <button 
          type="submit"
          class="w-full md:w-auto px-8 py-4 bg-gold-300 text-dark hover:bg-gold-400 transition-colors duration-300 font-semibold"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
</section>